doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    title Vision | Register
    meta(name='description', content='')
    meta(name='author', content='')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(href='https://fonts.googleapis.com/css?family=Raleway', rel='stylesheet')
    link(rel='stylesheet', href='stylesheets/normalize.css')
    link(rel='stylesheet', href='stylesheets/main.css')
    link(rel='stylesheet', type='text/css', href='http://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css')
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.1.0/jquery.min.js')
  body
    #toggled
      a#close(href='javascript:void(0)')
        i.ion-close
      #menu-wrapper
        h1 MENU
        |  
        a(href='/') HOME
        |  
        a(href='/login') CUSTOMER LOGIN
        |  
        a(href='/custom') CUSTOM CABINETS
        |  
        a(href='/base') BASE CABINETS
        |  
        a(href='/information') INFORMATION
        |  
        a(href='/account') ACCOUNT OVERVIEW
        |  
        a(href="/logout") LOGOUT
    header
      nav
        a(href='/')
          img(src='images/logo.png')
        a#menu(href='javascript:void(0)')
          i.ion-navicon-round
      .login-block
        form(action='/register', method="POST")
          h1 REGISTER
          |  
          input#username(type='text', name='name',  placeholder='Full Name', required)
          |  
          input#username(type='tel', name='phone_number',placeholder='123-456-7890', pattern='\d{3}[\-]\d{3}[\-]\d{4}', required)
          |  
          input#username(type='text', name='shipping_address', placeholder='Shipping Address', required)
          |  
          input#username(type='text', name='billing_address' ,placeholder='Billing Address', required)
          |  
          input#username(type='email', name='email_address',  placeholder='Email Address', required)
          |  
          input.button(type='submit', value='SUBMIT')
    script(src='javascripts/main.js', type='text/javascript')
