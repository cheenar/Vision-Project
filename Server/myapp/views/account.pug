doctype html

html(lang='en')
  head
    meta(charset='utf-8')
    title Vision | Account
    meta(name='description', content='')
    meta(name='author', content='')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(href='https://fonts.googleapis.com/css?family=Raleway', rel='stylesheet')
    link(rel='stylesheet', href='stylesheets/normalize.css')
    link(rel='stylesheet', href='stylesheets/main.css')
    link(rel='stylesheet', type='stylesheets/css', href='http://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css')
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.1.0/jquery.min.js')
  body#unlock
    #toggled
      a#close(href='javascript:void(0)')
        i.ion-close
      #menu-wrapper
        h1 MENU
        |  
        a(href='/') HOME
        |  
        a(href='/login') CUSTOMER LOGIN
        |  
        a(href='/custom') CUSTOM CABINETS
        |  
        a(href='/base') BASE CABINETS
        |  
        a(href='/information') INFORMATION
        |  
        a(href='/account') ACCOUNT OVERVIEW
        |  
        a(href="/logout") LOGOUT
    header#unlock
      nav
        a(href='/')
          img(src='images/logo.png')
        a#menu(href='javascript:void(0)')
          i.ion-navicon-round
      #block
        h1 ACCOUNT OVERVIEW
        p
        if accountLoggedIn
          | #{name}
        else
          | You're Not Logged In
        .login-block
          form(action='/account/modify', method="POST")
            input#username(type='text', required='', placeholder= '', value= fullName, name="fullName")
            |  
            input#username(type='tel', required='', value= phoneNumber, name="phoneNumber")
            |  
            input#username(type='text', required='', value= shippingAddress, , name="shippingAddress")
            |  
            input#username(type='text', required='', value= billingAddress, name="billingAddress")
            |  
            input#username(type='email', required='', value= emailAddress, name="emailAddress")
            |  
            input.button(type='submit', value='SUBMIT CHANGES')
        h1 ORDER HISTORY
        .cabinet
          img(style='width: 50%; height: auto;', src='')
        .store
          ul(style='float: left;')
    script(src='javascripts/main.js', type='text/javascript')
