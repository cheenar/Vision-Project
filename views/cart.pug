doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    title Vision | Cart
    meta(name='description', content='')
    meta(name='author', content='')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(href='https://fonts.googleapis.com/css?family=Raleway', rel='stylesheet')
    link(rel='stylesheet', href='stylesheets/normalize.css')
    link(rel='stylesheet', href='stylesheets/main.css')
    link(rel='stylesheet', type='text/css', href='http://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css')
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.1.0/jquery.min.js')
  body#unlock
    #toggled
      a#close(href='javascript:void(0)')
        i.ion-close
      #menu-wrapper
        h1 MENU
        |  
        a(href='/') HOME
        |  
        a(href='/login') CUSTOMER LOGIN
        |  
        a(href='/custom') CUSTOM CABINETS
        |  
        a(href='/base') BASE CABINETS
        |  
        a(href='/information') INFORMATION
        |  
        a(href='/account') ACCOUNT OVERVIEW
        |  
        a(href="/logout") LOGOUT
    header#unlock
      nav
        a(href='/')
          img(src='images/logo.png')
        a#menu(href='javascript:void(0)')
          i.ion-navicon-round
        a#cart(href='cart.html')
          i.ion-android-cart
      #block
        #block_real
          h1 CART
          if orders != null
            if orders.length == 0
              p Your cart is empty
          form(action='/cart/submit_order', method="POST")
            .duplicate
              table
                tr
                  th Product Name
                  th Width (inches)
                  th Height (inches)
                  th Depth (inches)
                  th Rollouts
                  th Hinge Side
                  th Finish Side
                  th Hinge Type
                  th Glide Type
                  th Drawer Box
                  th Glaze
                  th Interior Color
                  th Door Style
                  th Finish Material
                  th Material
                  th Quantity
                for order in orders 
                  - var orderUOID = order.uoid
                  input(type="hidden", name="uoid", value= orderUOID)
                  tr
                    td #{order.ProductName}
                    td #{order.Width}
                    td #{order.Height}
                    td #{order.Depth}
                    td #{order.Rollouts}
                    td #{order['Hinge Sides']}
                    td #{order['Finish Sides']}
                    td #{order['Hinge Type']}
                    td #{order['Glide Type']}
                    td #{order['Drawer Box']}
                    td #{order['Glaze']}
                    td #{order['Interior Color']}
                    td #{order['Door Style']}
                    td #{order['Finish Material']}
                    td #{order['Material']}
                    td #{order['quantity']}
                    td
                      a(style='text-decoration: none; color: red;', href='/cart/remove?uoid=' + order.uoid, method="GET") REMOVE
            |  
            if orders != null
              if orders.length != 0
                
                input.button(style='width: 40%; margin-bottom: 30px; margin-top: 50px;', type='submit', value='SUBMIT ORDER')
    script(src='javascripts/main.js', type='text/javascript')
