doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    title Vision | Account
    meta(name='description', content='')
    meta(name='author', content='')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(href='https://fonts.googleapis.com/css?family=Raleway', rel='stylesheet')
    link(rel='stylesheet', href='stylesheets/normalize.css')
    link(rel='stylesheet', href='stylesheets/main.css')
    link(rel='stylesheet', type='text/css', href='http://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css')
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.1.0/jquery.min.js')
  body#unlock
    #toggled
      a#close(href='javascript:void(0)')
        i.ion-close
      #menu-wrapper
        h1 MENU
        |  
        a(href='/') HOME
        |  
        a(href='/login') CUSTOMER LOGIN
        |  
        a(href='/custom') CUSTOM CABINETS
        |  
        a(href='/base') BASE CABINETS
        |  
        a(href='/information') INFORMATION
        |  
        a(href='/account') ACCOUNT OVERVIEW
        |  
        a(href="/logout") LOGOUT
    header#unlock
      nav
        a(href='/')
          img(src='images/logo.png')
        a#menu(href='javascript:void(0)')
          i.ion-navicon-round
      #block
        h1 ACCOUNT OVERVIEW
        if !accountLoggedIn
          p
            | You appear to not be logged in. Please login 
          a(style='text-decoraton: none; color: black;', href='/login') here
        .login-block
          form(action='/account/modify', method='POST')
            label First Name:
            |  
            input#username(type='text', name='firstName', required='', placeholder='John', value= firstName)
            |  
            label Last Name:
            |  
            input#username(type='text', name='lastName', required='', placeholder='Smith', value= lastName)
            |  
            label Phone Number
            |  
            input#username(type='tel', required='', name='phoneNumber', placeholder='123-456-7890', value= phoneNumber)
            |  
            label Shipping Address
            |  
            input#username(type='text', required='', name='shippingAddress', placeholder='5614 E Powhatan Ave', value= shippingAddress)
            |  
            label Billing Address:
            |  
            input#username(type='text', required='', name='billingAddress', placeholder='5614 E Powhatan Ave', value= billingAddress)
            |  
            label Email Address:
            |  
            input#username(type='email', required='', name='emailAddress', placeholder='example@domain.com', value= emailAddress)
            |  
            label Password:
            |  
            input#username(type='text', required='', name='password', placeholder='', value= password)
            |  
            input.button(type='submit', value='SUBMIT CHANGES')
        h1 ORDER HISTORY
        .duplicate
              table
                tr
                  th Product Name
                  th Width (inches)
                  th Height (inches)
                  th Depth (inches)
                  th Rollouts
                  th Hinge Side
                  th Finish Side
                  th Hinge Type
                  th Glide Type
                  th Drawer Box
                  th Glaze
                  th Interior Color
                  th Door Style
                  th Finish Material
                  th Material
                  th Quantity
                  th ID
                for order in uoids 
                  - var orderUOID = order.uoid
                  input(type="hidden", name="uoid", value= orderUOID)
                  tr
                    td #{order.ProductName}
                    td #{order.Width}
                    td #{order.Height}
                    td #{order.Depth}
                    td #{order.Rollouts}
                    td #{order['Hinge Sides']}
                    td #{order['Finish Sides']}
                    td #{order['Hinge Type']}
                    td #{order['Glide Type']}
                    td #{order['Drawer Box']}
                    td #{order['Glaze']}
                    td #{order['Interior Color']}
                    td #{order['Door Style']}
                    td #{order['Finish Material']}
                    td #{order['Material']}
                    td #{order['quantity']}
                    td #{order['uoid']}
    script(src='javascripts/main.js', type='text/javascript')
